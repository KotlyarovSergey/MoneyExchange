<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A4A7AB"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_one_hundred"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:src="@drawable/sto_rubley_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_five_hundred"
        />

    <TextView
        android:id="@+id/tv_one_hundred_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#642C1A"
        tools:text="x2"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@id/image_one_hundred"
        app:layout_constraintEnd_toEndOf="@id/image_one_hundred"
        app:layout_constraintTop_toTopOf="@id/image_one_hundred"
        app:layout_constraintBottom_toBottomOf="@id/image_one_hundred"/>

    <ImageButton
        android:id="@+id/image_one_hundred_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_exposure_neg_1_24"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_one_hundred"
        app:layout_constraintEnd_toStartOf="@id/image_one_hundred_plus"
        app:layout_constraintStart_toStartOf="@id/image_one_hundred"
        />

    <ImageButton
        android:id="@+id/image_one_hundred_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_exposure_plus_1_24"
        app:layout_constraintTop_toBottomOf="@id/image_one_hundred"
        app:layout_constraintStart_toEndOf="@id/image_one_hundred_minus"
        app:layout_constraintEnd_toEndOf="@id/image_one_hundred"/>

    <ImageView
        android:id="@+id/image_five_hundred"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:src="@drawable/pyatsot_rubley_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_one_hundred"
        app:layout_constraintEnd_toStartOf="@id/image_thousand"
        />


    <TextView
        android:id="@+id/tv_five_hundred_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#9D1D14"
        tools:text="x10"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@id/image_five_hundred"
        app:layout_constraintEnd_toEndOf="@id/image_five_hundred"
        app:layout_constraintTop_toTopOf="@id/image_five_hundred"
        app:layout_constraintBottom_toBottomOf="@id/image_five_hundred"/>

    <ImageButton
        android:id="@+id/image_five_hundred_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_exposure_neg_1_24"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_five_hundred"
        app:layout_constraintEnd_toStartOf="@id/image_five_hundred_plus"
        app:layout_constraintStart_toStartOf="@id/image_five_hundred"
        />

    <ImageButton
        android:id="@+id/image_five_hundred_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_exposure_plus_1_24"
        app:layout_constraintTop_toBottomOf="@id/image_five_hundred"
        app:layout_constraintStart_toEndOf="@id/image_five_hundred_minus"
        app:layout_constraintEnd_toEndOf="@id/image_five_hundred"/>


    <ImageView
        android:id="@+id/image_thousand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:scaleType="fitCenter"
        android:src="@drawable/tyisyacha_rubley_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_five_hundred"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_thousand_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#213322"
        tools:text="x4"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@id/image_thousand"
        app:layout_constraintEnd_toEndOf="@id/image_thousand"
        app:layout_constraintTop_toTopOf="@id/image_thousand"
        app:layout_constraintBottom_toBottomOf="@id/image_thousand"/>

    <ImageButton
        android:id="@+id/image_thousand_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_exposure_neg_1_24"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_thousand"
        app:layout_constraintEnd_toStartOf="@id/image_thousand_plus"
        app:layout_constraintStart_toStartOf="@id/image_thousand"
        />

    <ImageButton
        android:id="@+id/image_thousand_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_exposure_plus_1_24"
        app:layout_constraintTop_toBottomOf="@id/image_thousand"
        app:layout_constraintStart_toEndOf="@id/image_thousand_minus"
        app:layout_constraintEnd_toEndOf="@id/image_thousand"/>

    <ImageButton
        android:id="@+id/image_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit"
        android:src="@drawable/baseline_edit_24"
        android:layout_marginStart="16dp"
        android:background="#00A4A7AB"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@id/image_one_hundred"
        app:layout_constraintTop_toTopOf="@id/tv_total_amount"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_amount"/>

    <ImageButton
        android:id="@+id/image_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit"
        android:src="@drawable/baseline_done_24"
        android:background="#00A4A7AB"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/image_edit"
        app:layout_constraintEnd_toStartOf="@id/tv_total_amount"
        app:layout_constraintTop_toTopOf="@id/tv_total_amount"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_amount"/>


    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#92631D"
        tools:text="4 700"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/image_thousand_plus"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>